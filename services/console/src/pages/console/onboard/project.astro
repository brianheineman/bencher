---
export const prerender = false;

import { BENCHER_API_URL } from "astro:env/server";

import BaseLayout from "../../../layouts/BaseLayout.astro";
import OnboardProject from "../../../components/console/onboard/OnboardProject";
import OnboardStepsFallback from "../../../components/console/onboard/OnboardStepsFallback";
import { OnboardStep } from "../../../components/console/onboard/OnboardStepsInner";
import ThemeScript from "../../../components/navbar/theme/ThemeScript.astro";
---

<BaseLayout
  title="Project Name"
  description="Setup a new Project on Bencher"
>
  <div slot="navbar" />

  <OnboardProject client:only="solid-js" apiUrl={BENCHER_API_URL}>
    <div slot="fallback">
      <OnboardStepsFallback step={OnboardStep.PROJECT} />
      <section class="section">
        <div class="container">
          <div class="columns is-centered">
            <div class="column is-half">
              <div class="content has-text-centered">
                <h1 class="title is-1">Name your first project</h1>
                <h2 class="subtitle is-4">
                  Pick a name for your project. You can always change it later.
                </h2>
                <form>
                  <div class="field">
                  <div class="control has-icons-left has-icons-right">
                    <span class="icon is-small is-left">
                    </span>
                    <input
                      class="input"
                    />
                  </div>
                  </div>
                  <button
                    class="button is-primary is-fullwidth"
                    title="Save project name"
                    disabled={true}
                  >
                    Save Project Name
                  </button>
                </form>
                <br />
                <figure class="frame">
                  <h3 class="title is-5">This is your project slug</h3>
                  <pre data-language="plaintext">
                  </pre>
                  <button
                    class="button is-fullwidth"
                    title="Copy project slug to clipboard"
                  >
                    <span class="icon-text">
                      <span class="icon">
                        <i class="far fa-copy" />
                      </span>
                      <span>Copy to Clipboard</span>
                    </span>
                  </button>
                </figure>
                <br />
                <br />
                <a
                  class="button is-primary is-fullwidth"
                >
                  <span class="icon-text">
                    <span>Next Step</span>
                    <span class="icon">
                      <i class="fas fa-chevron-right" />
                    </span>
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </OnboardProject>

  <div slot="footer" />

  <ThemeScript />
</BaseLayout>