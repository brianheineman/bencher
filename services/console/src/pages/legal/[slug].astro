---
export const prerender = true;

import { render } from "astro:content";

import LegalLayout from "../../layouts/legal/LegalLayout.astro";
import Collection from "../../util/collection";
import { getEnOnlyPaths } from "../../i18n/utils";

export async function getStaticPaths() {
	const collection = Collection.legal;
	return await getEnOnlyPaths(collection);
}

const page = Astro.props;
const { Content } = await render(page);
---

<LegalLayout
  title={page.data.title}
  description={page.data.description}
  heading={page.data.heading}
  published={page.data.published}
  modified={page.data.modified}
>
  <Content />
</LegalLayout>
