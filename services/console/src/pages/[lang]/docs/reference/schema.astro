---
export const prerender = true;

import SchemaPanel from "../../../../components/docs/SchemaPanel.astro";
import DocsLayout from "../../../../layouts/docs/DocsLayout.astro";
import { Language, schema, otherLanguages } from "../../../../i18n/ui";
import Collection from "../../../../util/collection";

const collection = Collection.docs_reference;

export async function getStaticPaths() {
	return otherLanguages.map((lang) => {
		return { params: { lang } };
	});
}

const { lang } = Astro.params;

const description = () => {
	switch (lang) {
		case Language.en:
			return "Bencher Database Schema Diagram";
		case Language.de:
			return "Diagramm des Bencher-Schemas";
		case Language.es:
			return "Diagrama del esquema de Bencher";
		case Language.fr:
			return "Schéma Bencher Diagram";
		case Language.ja:
			return "Bencherスキーマ図";
		case Language.ko:
			return "Bencher 스키마 다이어그램";
		case Language.pt:
			return "Diagrama de esquema Bencher";
		case Language.ru:
			return "Схема Bencher Диаграмма";
		case Language.zh:
			return "Bencher数据库架构图";
	}
};

const heading = () => {
	switch (lang) {
		case Language.en:
			return "Bencher Database Schema";
		case Language.de:
			return "Bencher-Schema";
		case Language.es:
			return "Esquema de base de datos Bencher";
		case Language.fr:
			return "Schéma de base de données Bencher";
		case Language.ja:
			return "Bencherデータベーススキーマ";
		case Language.ko:
			return "Bencher 데이터베이스 스키마";
		case Language.pt:
			return "Esquema de banco de dados Bencher";
		case Language.ru:
			return "Схема базы данных Bencher";
		case Language.zh:
			return "Bencher数据库架构";
	}
};

const published = "2023-09-26T10:25:00Z";
const modified = "2025-02-09T08:30:00Z";
---

<DocsLayout title={schema(lang)} description={description()} heading={heading()} published={published} modified={modified} lang={lang} collection={collection}
slug="schema" canonical="https://bencher.dev/docs/reference/schema/">
  <SchemaPanel />
</DocsLayout>
